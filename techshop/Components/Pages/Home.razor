@page "/"
@using System.Diagnostics
@using System.Globalization
@rendermode InteractiveServer

<PageTitle>Home | TechShop</PageTitle>

<div class="flex w-[1250px] bg-gray-100">
    <div class="max-w-[220px] p-4">
